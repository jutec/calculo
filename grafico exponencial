import matplotlib.pyplot as plt
import numpy as np

x = np.linspace(-4, 4)

y = -x + 2

x1 = [0,2,1]
y1 = [2,0,1]

plt.grid()
plt.plot(x, y, label = 'Raiz = (2, 0)\n'
        'Interceção vertical = (0, 2)\n'
        'Ponto de minha escolha = (1, 1)')
plt.legend(loc='best') 
plt.scatter(x1,y1)
plt.show()
